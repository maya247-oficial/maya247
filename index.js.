const { Telegraf } = require("telegraf");
const axios = require("axios");

const bot = new Telegraf("TU_TOKEN_DE_TELEGRAM"); // ReemplÃ¡zalo aquÃ­

bot.on("text", async (ctx) => {
  try {
    // EnvÃ­a el mensaje a Ziper (ajusta la URL)
    const respuesta = await axios.post("URL_DE_ZIPER", {
      message: ctx.message.text,
      user_id: ctx.chat.id,
    });
    
    // Responde al usuario con la IA
    ctx.reply(respuesta.data);
  } catch (error) {
    ctx.reply("ğŸš¨ Â¡Ups! Algo fallÃ³. Intenta de nuevo.");
  }
});

bot.launch();
